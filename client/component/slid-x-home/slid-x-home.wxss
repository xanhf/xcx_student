/* component/scrool-x-home/scrllo-x-home.wxss */
.scrool-x-home{
   display: flex;
  flex-direction: column;
  justify-content: space-around;
  box-sizing: border-box;
  width: 100%;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  height: 100%;
  background-color: white;
}
.swiper-container{
  background: white;
  height: 80%;
}
.image-item{
  height: 100%;
  width: 80%;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  box-sizing: border-box;
 border:5px solid grey;
 border-radius: 10rpx;
 box-shadow: 0 60rpx 120rpx rgba(0, 0, 0, .4);
}
.slide-image{
width: 90%;
border-radius: 10rpx;
}
.indicator-text{
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.indicator-select{
  color: red;
  display: inline-block
}
.indicator-length{
  color: black;
  display: inline-block
}
.item-container{
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
}