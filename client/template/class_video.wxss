.class-video{
  background: white;
  margin-bottom: 40rpx;
}
.class-video-title{
  padding-top: 20rpx;
  font-size: 40rpx;
  display: flex;
  padding-bottom: 20rpx;
  justify-content: center;
}
.class-video-container{
  padding-bottom: 20rpx;
  border-bottom: 1px solid #e1e1e1;
  display: flex;
  flex-wrap:wrap;
  justify-content: space-around;
}
.class-video-item{
  width: 320rpx;
  margin-bottom: 20rpx;
}
.class-video-image{
  width: 320rpx;
  height: 200rpx;
  border-radius: 10rpx;
}
.class-video-item-title{
  font-weight: bold;
  font-size: 20rpx;
  color: black;
}
.class-video-item-pnum{
  font-size: 15rpx;
}
.more-video{
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  display: flex;
  justify-content: center;
  color: gray;
  font-size: 25rpx;
}