.question_detail{
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  background: white;
  padding-left: 20rpx;
  padding-bottom: 20rpx;
  padding-top: 30rpx;
  margin-bottom: 20rpx;
}
.question-detail-image{
  width: 30%;
    height: 300rpx;
  box-shadow: 5rpx 5rpx 5rpx rgba(0, 0, 0, .2);
}
.question-detail-info{
 display: flex;
 justify-content: space-between;
  width: 65%;
  flex-direction: column;
  padding-right:10px;
}
.question-detail-text{
  font-size: 25rpx;
  color: gold;
}
.question-detail-title{
  font-size: 35rpx;
  font-weight: bold;
  color: black;
}