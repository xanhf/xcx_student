.answer_container{
  padding: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.user{
  width: 20%;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.user_image{
  border-radius: 80rpx;
  width: 80rpx;
  height: 80rpx;
}
.user_info{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.user_name{
  font-size: 30rpx;
  color: black;
}
.user_city{
  font-size: 25rpx;
  margin-top: 5rpx;
}

.user_score{
  display: flex;
    font-size: 40rpx;
    color: red;
}