.weParser-inline{
  display: inline;
  margin: 0;
  padding: 0;
}

/* 标题 */
.weParser-div{margin: 0;padding: 0;}
.weParser-h1{ font-size:2em; margin: .67em 0 }
.weParser-h2{ font-size:1.5em; margin: .75em 0 }
.weParser-h3{ font-size:1.17em; margin: .83em 0 }
.weParser-h4{ margin: 1.12em 0}
.weParser-h5 { font-size:.83em; margin: 1.5em 0 }
.weParser-h6{ font-size:.75em; margin: 1.67em 0 }

.weParser-h1 {
  font-size: 18rpx;
  font-weight: 400;
  margin-bottom: .9em;
}
.weParser-h2 {
  font-size: 16rpx;
  font-weight: 400;
  margin-bottom: .34em;
}
.weParser-h3 {
  font-weight: 400;
  font-size: 15rpx;
  margin-bottom: .34em;
}
.weParser-h4 {
  font-weight: 400;
  font-size: 14rpx;
  margin-bottom: .24em;
}
.weParser-h5 {
  font-weight: 400;
  font-size: 13rpx;
  margin-bottom: .14em;
}
.weParser-h6 {
  font-weight: 400;
  font-size: 12rpx;
  margin-bottom: .04em;
}

.weParser-h1, .weParser-h2, .weParser-h3, .weParser-h4, .weParser-h5, .weParser-h6, .weParser-b, .weParser-strong  { font-weight: bold; }

.weParser-i,.weParser-cite,.weParser-em,.weParser-var,.weParser-address{font-style:italic}
.weParser-pre,.weParser-tt,.weParser-code,.weParser-kbd,.weParser-samp{font-family:monospace}
.weParser-pre{white-space:pre}
.weParser-big{font-size:1.17em}
.weParser-small,.weParser-sub,.weParser-sup{font-size:.83em}
.weParser-sub{vertical-align:sub}
.weParser-sup{vertical-align:super}
.weParser-s,.weParser-strike,.weParser-del{text-decoration:line-through}

.weParser-strong,weParser-s{display: inline}
.weParser-a{
  color: deepskyblue;
  word-break:break-all;
  overflow:auto;
}

.weParser-video{
  text-align: center;
  margin: 10rpx 0;
}

.weParser-video-video{
  width:100%;
}

.weParser-img{
  overflow: hidden;
  width:100%;
}

.weParser-blockquote {
  margin: 0;
  padding:10rpx 0 10rpx 5rpx;
  font-family:Courier, Calibri,"宋体";
  background:#f5f5f5;
  border-left: 3rpx solid #dbdbdb;
}

.weParser-code,.weParser-wxxxcode-style{
  display: inline;
  background:#f5f5f5;
}
.weParser-ul{
  margin: 20rpx 10rpx;
}

.weParser-li,.weParser-li-inner{
  display: flex;
  align-items: baseline;
  margin: 10rpx 0;
}
.weParser-li-text{
  align-items: center;
  line-height: 20rpx;
}

.weParser-li-circle{
  display: inline-flex;
  width: 5rpx;
  height: 5rpx;
  background-color: #333;
  margin-right: 5rpx;
}

.weParser-li-square{
  display: inline-flex;
  width: 10rpx;
  height: 10rpx;
  background-color: #333;
  margin-right: 5rpx;
}
.weParser-li-ring{
  display: inline-flex;
  width: 10rpx;
  height: 10rpx;
  border: 2rpx solid #333;
  border-radius: 50%;
  background-color: #fff;
  margin-right: 5rpx;
}

.weParser-table{
  width: 100%;
}
.weParser-thead,.weParser-tfoot,.weParser-tr{
  display: flex;
  flex-direction: row;
}
.weParser-th,.weParser-td{
  display: flex;
  overflow: auto;
}

.weParser-u {
  text-decoration: underline;
}
.weParser-hide{
  display: none;
}
.weParser-tr{
  display: flex;
  border-right:1rpx solid #e0e0e0;
  border-bottom:1rpx solid #e0e0e0;
}
.weParser-th,
.weParser-td{
  flex:1;
  padding:5rpx;
  font-size:28rpx;
  border-left:1rpx solid #e0e0e0;
  word-break: break-all;
}
.weParser-td:last{
  border-top:1rpx solid #e0e0e0;
}
.weParser-th{
  background:#f0f0f0;
  border-top:1rpx solid #e0e0e0;
}
