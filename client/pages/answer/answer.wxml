<!--答题页面的ui-->
<view class='answer-container'>
  <view class='answer-position'>
  第{{position}}题
  </view>
  <view class='answer-title border'>
  {{title}}
  </view>
 <block wx:for="{{items}}" wx:key="{{item.name}}">
 <view class='answer-choose {{choose==item.name?"choose":""}}' 
data-name='{{item.name}}'  bindtap='choose'>
 {{item.value}}
 </view>
 </block>
 <view class='next' bindtap='nextAnswer'>
 下一题
 </view>
</view>
